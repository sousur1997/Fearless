<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">#0c0e2d</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/splash_status_bar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppInnerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menu_bar_color</item>
        <item name="colorPrimaryDark">@color/splash_status_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@color/menu_bar_color</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
    </style>

    <style name="Profile_Theme" parent="AppInnerTheme">
        <item name="colorPrimaryDark">@color/home_status_color</item>
        <item name="android:colorPrimary">@color/app_theme_blue</item>
        <item name="colorAccent">@color/profile_header_text_color</item>
    </style>

    <style name="BottomMenuColor" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MatTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/menu_bar_color</item>
        <item name="colorPrimaryDark">@color/splash_status_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@color/menu_bar_color</item>
    </style>

    <style name="title_color">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="title_color_expand">
        <item name="android:textColor">#00ffffff</item>
    </style>

    <style name="profile_setup_theme" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/app_theme_blue</item>
    </style>

    <style name="progress_style">
        <item name="android:color">@android:color/background_light</item>
    </style>

    <style name="spinner_style">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:fontFamily">@font/comforta_font</item>
    </style>

    <style name="profile_fab_style">
        <item name="colorAccent">@color/alert_fab_color</item>
    </style>
</resources>
